<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:background="@drawable/gradient_for_app"
    android:layout_height="200dp"
    android:id="@+id/exit_dialog_main_layout"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_image_card"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="35dp">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:contentDescription="@string/dialog_image"
            android:src="@drawable/ic_baseline_person_50_blue_bright" />
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:elevation="10dp"
        android:id="@+id/are_you_sure_text"
        android:text="@string/are_you_sure"
        android:textColor="@color/white"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/dialog_exit_linear_for_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="100">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/cancel"
            app:strokeColor="@color/material_on_surface_emphasis_medium"
            app:strokeWidth="1dp"
            android:layout_weight="50"
            android:layout_marginEnd="5dp"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:textColor="@color/blue_bright"
            app:cornerRadius="20dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="50"
            android:textSize="12sp"
            app:strokeColor="@color/material_on_surface_emphasis_medium"
            app:strokeWidth="1dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/white"
            android:text="@string/exit"
            android:textColor="@color/blue_bright"
            app:cornerRadius="20dp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>