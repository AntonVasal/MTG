<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.mtg.ui.activities.mainActivity.mainFragments.profile.viewModel.ProfileViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <ProgressBar
                android:id="@+id/profile_progress_bar"
                style="@style/ClassicProgressBarLight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:indeterminateTint="@color/blue_dirty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_for_app"
                android:paddingBottom="40dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/log_out_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/log_out_button"
                    android:src="@drawable/ic_baseline_exit_to_app_50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="@color/transparent"
                    android:contentDescription="@string/settings"
                    android:src="@drawable/ic_baseline_create_50"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile_image_card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:id="@+id/user_profile_image"
                        style="@style/MainUserImageView"
                        loadImage="@{viewModel.user.data.imageUrl}"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:contentDescription="@string/user_image" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/change_profile_image_card_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/profile_image_card_view"
                    app:layout_constraintEnd_toEndOf="@+id/profile_image_card_view"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp">

                    <ImageView
                        android:id="@+id/change_profile_img_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blue_bright"
                        android:contentDescription="@string/change_profile_image"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_photo_camera_24" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/user_nickname"
                    android:layout_marginTop="20dp"
                    style="@style/MainUserNicknameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.user.data.nickname}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_image_card_view"
                    tools:text="@string/nickname" />

                <TextView
                    android:id="@+id/user_email"
                    style="@style/MainUserEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={viewModel.user.data.email}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/user_nickname"
                    tools:text="@string/email" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/info_text"
                style="@style/InfoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="5dp"
                android:text="@string/account_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/main_details_container" />

            <TextView
                android:id="@+id/info_nickname_text"
                style="@style/KindOfUserDataTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                android:text="@string/nickname"
                app:layout_constraintBottom_toTopOf="@id/user_nickname_container"
                app:layout_constraintStart_toStartOf="@id/user_nickname_container" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_nickname_container"
                style="@style/UserDataConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                app:layout_constraintTop_toBottomOf="@id/info_text">

                <ImageView
                    android:id="@+id/user_nickname_image"
                    style="@style/NicknameImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:contentDescription="@string/user_nickname_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/info_nickname"
                    style="@style/UserDataTextViews"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:text="@={viewModel.user.data.nickname}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/user_nickname_image"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/nickname" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/info_name_text"
                style="@style/KindOfUserDataTextViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="5dp"
                android:elevation="5dp"
                android:text="@string/name"
                app:layout_constraintBottom_toTopOf="@id/name_container"
                app:layout_constraintStart_toStartOf="@id/name_container" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/name_container"
                style="@style/UserDataConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
