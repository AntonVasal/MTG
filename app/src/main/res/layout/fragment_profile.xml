                    app:layout_constraintStart_toEndOf="@id/user_name_image"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/name" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/info_surname_text"
