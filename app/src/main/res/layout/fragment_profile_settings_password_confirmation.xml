<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_for_app"
    tools:context=".mainActivity.mainFragments.profileSettings.confirmPasswordFragment.ProfileSettingsPasswordConfirmationFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            style="@style/ClassicProgressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible"
            android:id="@+id/confirm_password_progress_bar"/>
        <ImageButton
            style="@style/ClassicBackButton"
            android:id="@+id/confirm_password_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/back_button" />
        <TextView
            style="@style/MainTitleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"
            android:textColor="@color/white"
            android:id="@+id/confirm_password_program_name"/>
        <TextView
            style="@style/MainAuthorText"
            android:id="@+id/confirm_password_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_program_name"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirm_password_edit_text"
            android:layout_width="match_parent"
            style="@style/BasicTextInputLayout.Password"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_author"
            android:layout_marginTop="70dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                style="@style/BasicTextInputEditText.Password"
                android:id="@+id/password_for_confirm" />

        </com.google.android.material.textfield.TextInputLayout>
        <Button
            style="@style/MainButtonForWorkingWithUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/confirm_password_button"
            android:text="@string/confirm_password"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_edit_text"
            android:layout_marginTop="40dp"/>
        <TextView
            style="@style/AuthHelpTextForUser"
            android:id="@+id/forget_password"
            android:text="@string/forget_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_password_button"
            android:layout_marginTop="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>