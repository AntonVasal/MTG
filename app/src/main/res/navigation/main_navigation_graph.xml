<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/mainFragment2">
    <fragment
        android:id="@+id/profileSettingsFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.ProfileSettingsFragment"
        android:label="ProfileSettingsFragment"
        tools:layout="@layout/fragment_profile_settings">
        <action
            android:id="@+id/action_profileSettingsFragment_to_profileSettingsPasswordConfirmationFragment"
            app:destination="@id/profileSettingsPasswordConfirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment2"
        android:name="com.example.mtg.mainActivity.mainFragments.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment2_to_profileSettingsFragment"
            app:destination="@id/profileSettingsFragment" />
        <action
            android:id="@+id/action_mainFragment2_to_countFragment"
            app:destination="@id/countFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileSettingsPasswordConfirmationFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.confirmPasswordFragment.ProfileSettingsPasswordConfirmationFragment"
        android:label="fragment_profile_settings_password_confirmation"
        tools:layout="@layout/fragment_profile_settings_password_confirmation">
        <argument
            android:name="typeFragments"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_profileSettingsPasswordConfirmationFragment_to_changeNameFragment"
            app:destination="@id/changeNameFragment" />
        <action
            android:id="@+id/action_profileSettingsPasswordConfirmationFragment_to_changeNicknameFragment"
            app:destination="@id/changeNicknameFragment" />
        <action
            android:id="@+id/action_profileSettingsPasswordConfirmationFragment_to_changeSurnameFragment"
            app:destination="@id/changeSurnameFragment" />
        <action
            android:id="@+id/action_profileSettingsPasswordConfirmationFragment_to_changeCountryFragment"
            app:destination="@id/changeCountryFragment" />
        <action
            android:id="@+id/action_profileSettingsPasswordConfirmationFragment_to_changeEmailFragment"
            app:destination="@id/changeEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/changeNameFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.changeDataFragments.ChangeNameFragment"
        android:label="fragment_change_name"
        tools:layout="@layout/fragment_change_data"/>
    <fragment
        android:id="@+id/changeNicknameFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.changeDataFragments.ChangeNicknameFragment"
        android:label="fragment_change_nickname"
        tools:layout="@layout/fragment_change_data"/>
    <fragment
        android:id="@+id/changeSurnameFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.changeDataFragments.ChangeSurnameFragment"
        android:label="fragment_change_surname"
        tools:layout="@layout/fragment_change_data"/>
    <fragment
        android:id="@+id/changeCountryFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.changeDataFragments.ChangeCountryFragment"
        android:label="fragment_change_country"
        tools:layout="@layout/fragment_change_data"/>
    <fragment
        android:id="@+id/changeEmailFragment"
        android:name="com.example.mtg.mainActivity.mainFragments.profileSettings.changeDataFragments.ChangeEmailFragment"
        android:label="fragment_change_email"
        tools:layout="@layout/fragment_change_data"/>
    <fragment
        android:id="@+id/countFragment"
        android:name="com.example.mtg.mainActivity.count.CountFragment"
        android:label="CountFragment"
        tools:layout="@layout/fragment_count">
        <argument
            android:name="typeNumber"
            android:defaultValue="0"
            app:argType="integer"/>
        <argument
            android:name="taskType"
            android:defaultValue="0"
            app:argType="integer"/>
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.mtg.logActivity.logFragments.SignInFragment"
        android:label="fragment_sign_in"
        tools:layout="@layout/fragment_sign_in" >
        <action
            android:id="@+id/action_signInFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
        <action
            android:id="@+id/action_signInFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.mtg.logActivity.logFragments.ResetPasswordFragment"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.mtg.logActivity.logFragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
</navigation>