        <item name="cornerRadius">@dimen/corner_radius_15</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textSize">@dimen/king_of_data_text_16</item>
        <item name="strokeWidth">@dimen/normal_stroke_width_2</item>
    </style>

    <style name="UserDataTextViews" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/for_user_data_text_18</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="KindOfUserDataTextViews" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/king_of_data_text_16</item>
        <item name="android:textColor">@color/blue_dirty</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BasicMainText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">italic</item>
    </style>

