    <style name="InfoTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/large_title_text_30</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BasicMainDataText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainUserNicknameText" parent="BasicMainDataText">
        <item name="android:textSize">@dimen/large_title_text_36</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainUserEmailText" parent="BasicMainDataText">
        <item name="android:textSize">@dimen/main_elements_text_20</item>
    </style>

    <style name="BasicTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_radius_20</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_radius_20</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_radius_20</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_radius_20</item>
        <item name="android:elevation">@dimen/normal_elevation_15</item>
    </style>


    <style name="BasicTextInputLayout.Password" parent="BasicTextInputLayout">
        <item name="endIconMode">password_toggle</item>
        <item name="startIconDrawable">@drawable/ic_baseline_security_24</item>
        <item name="android:hint">@string/password</item>
    </style>

    <style name="BasicTextInputLayout.Email" parent="BasicTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_baseline_email_24</item>
        <item name="android:hint">@string/email</item>
    </style>

    <style name="BasicTextInputLayout.Nickname" parent="BasicTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_baseline_star_24</item>
        <item name="android:hint">@string/nickname</item>
    </style>

    <style name="BasicTextInputLayout.Name" parent="BasicTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_baseline_person_24</item>
        <item name="android:hint">@string/name</item>
    </style>

    <style name="BasicTextInputLayout.Surname" parent="BasicTextInputLayout">
        <item name="startIconDrawable">@drawable/ic_baseline_group_24</item>
        <item name="android:hint">@string/surname</item>
    </style>


